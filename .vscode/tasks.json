{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile",
      "type": "shell",
      "command": "npm run compile",
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "npm run watch",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": {
        "owner": "webpack",
        "pattern": {
          "regexp": "^([^\\s].*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack.*starting",
          "endsPattern": "webpack.*compiled"
        }
      }
    }
  ]
}
